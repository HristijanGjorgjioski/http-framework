{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "http-framework": ["node_modules/http-framework"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
